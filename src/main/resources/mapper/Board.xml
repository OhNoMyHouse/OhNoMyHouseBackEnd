<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.model.dao.BoardDAO">

	<insert id="makePoll">
		insert into boardinfo (title, content) 
		values(#{title}, #{content})
	</insert>

	<select id="getBoardList" resultType="Board">
		select * from boardinfo;
	</select>
	
	<select id="getBoard" resultType="Board">
		select * from boardinfo where idx = ${idx}
	</select>
	
	<update id="update" parameterType="Board">
		update boardinfo set title = ${title}, content = ${content} where idx = ${idx}
	</update>
	
	<delete id="delete">
		delete from boardinfo where idx = ${idx}
	</delete>

</mapper>